{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Publish Wiki (Windows)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\scripts\\publish.ps1"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Publish Wiki (Linux/Mac)",
      "type": "shell",
      "command": "bash",
      "args": [
        "${workspaceFolder}/scripts/publish.sh"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "build"
    }
  ]
}

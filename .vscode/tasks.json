{
  "version": "2.0.0",
    "inputs": [
    {
      "id": "parentFolder",
      "type": "promptString",
      "description": "Parent folder under src (e.g. linux/ssh)",
      "default": "linux"
    },
    {
      "id": "pageTitle",
      "type": "promptString",
      "description": "Page title (human-readable)",
      "default": "SSH + 1Password agent forwarding"
    },
    {
      "id": "fileName",
      "type": "promptString",
      "description": "Filename (e.g. ssh_1password_config.md)",
      "default": "ssh_1password_config.md"
    },
    {
      "id": "pageTags",
      "type": "promptString",
      "description": "Comma-separated tags (optional)",
      "default": "linux, ssh, 1password"
    }
  ],
  "tasks": [
    {
      "label": "Publish Wiki (Windows)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\scripts\\publish.ps1"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Publish Wiki (Linux/Mac)",
      "type": "shell",
      "command": "bash",
      "args": [
        "${workspaceFolder}/scripts/publish.sh"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
      "isDefault": true
    }
  },
      {
      "label": "Wiki: Create new page",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "wiki",
        "new-page",
        "--root",
        "${workspaceFolder}",
        "--parent",
        "${input:parentFolder}",
        "--filename",
        "${input:fileName}",
        "--title",
        "${input:pageTitle}",
        "--tags",
        "${input:pageTags}"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
